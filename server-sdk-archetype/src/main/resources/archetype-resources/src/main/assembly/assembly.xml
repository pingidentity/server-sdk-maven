<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>server-sdk-extension-bundle-assembly</id>
  <formats>
    <format>zip</format>
    <format>dir</format>
  </formats>
  <fileSets>
    <!-- Copy the extension config directory.
    The file config/update/file-directives.properties is expected by
    the server, but user-provided files can be placed here, too. -->
    <fileSet>
      <outputDirectory>config</outputDirectory>
      <directory>${project.basedir}/src/main/assembly/config</directory>
    </fileSet>
    <!-- Copy generated extension documentation. This path must match the
    velocityResourceLoaderPath value in the POM. -->
    <fileSet>
      <outputDirectory>docs</outputDirectory>
      <directory>${project.build.directory}/velocity</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>docs</outputDirectory>
      <directory>${project.basedir}/src/main/assembly/docs</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>docs/javadoc</outputDirectory>
      <directory>${project.build.directory}/javadoc</directory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <!-- Copy the project artifact to the root directory. -->
    <dependencySet>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>${artifact.artifactId}*</include>
      </includes>
    </dependencySet>
    <!-- Copy dependencies to lib. -->
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <fileMode>644</fileMode>
    </dependencySet>
  </dependencySets>
</assembly>
